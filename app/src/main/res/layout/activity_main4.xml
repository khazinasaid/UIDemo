<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_height="fill_parent"
    android:layout_width="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:background="@drawable/kk"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 1 of 2: select Date and Time"
            android:textColor="#f2f0f0"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="200dp"
            android:text="What Day?"
            android:textColor="#f2f0f0"
            android:textSize="30dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="1dp">

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:background="#f7f5f5"
                android:gravity="center"
                android:padding="20dp"
                android:text="TODAY"
                android:textColor="#FF5CAF2F"
                android:textSize="10dp"

                ></TextView>


            <TextView
                android:id="@+id/TextView05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:background="#fff"
                android:gravity="center"
                android:padding="20dp"
                android:text="TOMORROW"
                android:textColor="#FF5CAF2F"
                android:textSize="10dp"></TextView>


            <TextView
                android:id="@+id/TextView06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:background="#fff"
                android:gravity="center"
                android:padding="20dp"
                android:text="SUNDAY"
                android:textColor="#5caf2f"
                android:textSize="10dp"

                ></TextView>


        </LinearLayout>

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:text="How Many People?"
            android:textColor="#f1f2f5"


            android:textSize="21dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="1dp">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbarAlwaysDrawHorizontalTrack="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/TextView08"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:background="#f1efef"
                        android:gravity="center"
                        android:padding="20dp"
                        android:text="1"
                        android:textColor="#FF5CAF2F"
                        android:textSize="20dp"

                        ></TextView>


                    <TextView
                        android:id="@+id/TextView07"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="10dp"
                        android:background="#fff"
                        android:gravity="center"
                        android:padding="20dp"
                        android:text="2"
                        android:textColor="#FF5CAF2F"
                        android:textSize="20dp"

                        ></TextView>


                    <TextView
                        android:id="@+id/TextView0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:background="#fff"
                        android:gravity="center"
                        android:padding="20dp"
                        android:text="3"
                        android:textColor="#5caf2f"
                        android:textSize="20dp"

                        ></TextView>

                    <TextView
                        android:id="@+id/TextView00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:background="#fff"
                        android:gravity="center"
                        android:padding="20dp"
                        android:text="4"
                        android:textColor="#5caf2f"
                        android:textSize="20dp"

                        ></TextView>

                    <TextView
                        android:id="@+id/TextView88"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:background="#fff"
                        android:gravity="center"
                        android:padding="20dp"
                        android:text="5"
                        android:textColor="#5caf2f"
                        android:textSize="20dp"

                        ></TextView>

                    <TextView
                        android:id="@+id/T"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:background="#f1efef"
                        android:gravity="center"
                        android:padding="20dp"
                        android:text="6"
                        android:textColor="#FF5CAF2F"
                        android:textSize="20dp"></TextView>


                    <TextView
                        android:id="@+id/T000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="10dp"
                        android:background="#fff"
                        android:gravity="center"
                        android:padding="20dp"
                        android:text="7"
                        android:textColor="#FF5CAF2F"
                        android:textSize="20dp"></TextView>


                    <TextView
                        android:id="@+id/Tt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:background="#fff"
                        android:gravity="center"
                        android:padding="20dp"
                        android:text="8"
                        android:textColor="#5caf2f"
                        android:textSize="20dp"></TextView>

                    <TextView
                        android:id="@+id/Te"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:background="#fff"
                        android:gravity="center"
                        android:padding="20dp"
                        android:text="9"
                        android:textColor="#5caf2f"
                        android:textSize="20dp"></TextView>

                    <TextView
                        android:id="@+id/rr8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:background="#fff"
                        android:gravity="center"
                        android:padding="20dp"
                        android:text="10"
                        android:textColor="#5caf2f"
                        android:textSize="20dp"></TextView>
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text77"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="110dp"
            android:paddingRight="200dp"
            android:text="What Time?"
            android:textColor="#f5f4f4"
            android:textSize="25dp" />




        <Button
            android:id="@+id/but"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textSize="20dp" />
    </LinearLayout>
</RelativeLayout>